<h1>Edit cat</h1>

<form action="<%= cat_url(@cat) %>" method = 'post'>
<input type="hidden", name = "_method", value = "patch" >
    <label for="new_cat"> Name </label>
    <input type="text", name = "cat[name]", value = "<%=  @cat.name %>">

<br><br>
    <label for="new_cat_birth_date"> Birth Date </label>
    <input type="date", name = "cat[birth_date]", value = "<%=  @cat.birth_date %>" >
 
<br><br>
    <label for="new_cat_color">Color </label>
        <select name = "cat[color]", id="new_cat_color">
            <option  > Select One </option>
            <% %w(white black yellow brown).each do |color|  %>
            <option value="<%= color %> " <%= @cat.color == color ? 'selected' : '' %>>
            <%= color %>
            </option>
            <% end %>

        </select>
<br><br>
    <label for="new_cat_sex"> Sex </label>
        <input type="radio" name = "cat[sex]" value = "M" id='male'
        <%= @cat.sex == "M" ? "checked" : ""%> > 
        <label for="male"> Male</label>
        <input type="radio" name = "cat[sex]" value = "F" id='female'
         <%= @cat.sex == "F" ? "checked" : ""%> > 
        <label for="female"> Female</label>

<br><br>
    <label for="new_cat_description">Description </label>
        <textarea name="cat[description]" ><%= @cat.description %></textarea>

<br><br>
    <input type="submit", value = "Edit Cat">


</form>




